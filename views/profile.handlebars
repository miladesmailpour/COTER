<div class="row1">
    <div class="col-auto">
        <h2 class="heading">Welcome to Coter, {{username}}</h2>
    </div>
</div>
<div class="row8 mt-4">
    <div class="col-lg-12">
        <h3>What's on your mind....Just Post It!!!</h3>

        <form class="form new-cote-form">
            <div class="form-group3">
                <label for="cote-descr">Cote description:</label>
                <textarea cols="40" rows="5" class="form-input1" type="text" id="cote-descr"
                    name="cote-descr"></textarea>
            </div>
            <div class="form-group3">
                <button type="submit" class="btn-lg btn-primary">Smash the button</button>
            </div>
        </form>
    </div>

    {{#if tweet.length}}
    <div class="col-md-6 cote-list">
        <h3>Take a Look at your Cotes:</h3>

        {{#each tweet as |t|}}
        <div class="row1 mb-2">
            <div class="col-md-8">
                <h4><a href="/tweet/{{tweet.id}}">{{tweet.cote}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{tweet.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>
<script src="/js/logout.js"></script>
<script src="/js/profile.js"></script>