<div id="cote" data-id="{{id}}">
  <div id="cote-header">
    {{user.username}}:
  </div>
  <div id="cote-body">
    <h4>
      - {{cote}}
    </h4>
  </div>
  <div id="cote-footer">
    <div id="cote-date">
      {{#if logged_in}}
        <button class="cote-btn like-btn" data-id="{{id}}">&#9829;</button>
      {{/if}}
      <span class="like-count">{{likes}}</span> likes
      created at: {{format_date date_created}}
    </div>
  </div>
</div>

        